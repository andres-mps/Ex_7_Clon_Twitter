<% for(const tweet of tweets) { %>
<div class="card-footer tweet p-0 mt-2">
  <div class="row mb-3 p-2 g-0 position-relative">
    <div class="col-1 d-flex align-items-start">
      <img src="<%=tweet.author.avatar%>" class="img-fluid rounded-circle w-100 mb-2" alt="avatar" />
    </div>
    <!-- avatar -->
    <div class="col-10 ms-3">
      <div class="text-start">
        <div class="card-body d-flex align-content-start">
          <h5 class="card-title p-0 fs-6"><%=tweet.author.firstname%> <%=tweet.author.lastname%></h5>
          <p class="card-text my-0 mx-2">
            <small class="text-body-tertiary"><%= tweet.author.username%> â€¢</small>
          </p>
          <p class="card-text my-0">
            <small class="text-body-tertiary"><%=tweet.createdAt%></small>
          </p>
        </div>
      </div>
      <!-- tweet header -->
      <div>
        <p><%= tweet.content %></p>
      </div>
      <!-- tweet text -->
      <div class="col-12 d-flex justify-content-between align-items-center">
        <div class="d-flex">
          <a href="#" role="button">
            <img src="../img/icons/like.svg" alt="like" />
          </a>
          <a href="#" role="button">
            <img src="../img/icons/like-active.svg" alt="like-active" />
          </a>
          <p class="my-0 mx-2"><%= tweet.likes.length %></p>
        </div>
        <div>
          <a href="#" role="button">
            <img src="../img/icons/delete.svg" alt="delete" />
          </a>
        </div>
      </div>
      <!-- tweet like btn -->
    </div>
    <!-- all tweet content -->
  </div>
  <!-- Termina row -->
</div>
<% } %>
