<!DOCTYPE html>
<html>
  <head>
    <%- include("../partials/meta") %>

    <link rel="stylesheet" href="/css/general_styles.css" />
  </head>

  <body>
    <div class="d-flex flex-row">
      <%- include("../partials/sidebar") %>
      <div class="container-sm mw-50">
        <div class="d-flex flex-row align-items-center">
          <div class="mx-3">
            <a class="text-black" href="#"><i class="fas fa-arrow-left fa-lg"></i></a>
          </div>
          <div>
            <h1 class="mb-0 fs-2"><%= user.firstname %> <%= user.lastname %></h1>
            <small class="text-body-tertiary"><%= user.username%></small>
          </div>
        </div>
        <div class="d-flex justify-content-between ml-2 my-3">
          <h3 class="fs-4">Followers</h3>
          <h3 class="fs-4">Following</h3>
        </div>

        <!-- tarjeta FOLLOWERS -->
        <% for (const followingUser of user.following){ %>
        <div class="card-footer bg-white">
          <div class="row mb-3 g-0">
            <div class="col-1">
              <div class="d-flex justify-content-end align-items-center">
                <img
                  src="/img/icons/generic_avatar.PNG"
                  class="img-fluid rounded-circle w-50 mb-2"
                  alt="..."
                />
              </div>
            </div>
            <div class="col-5">
              <div class="card-body px-3">
                <h5 class="card-title mb-0 p-0 fs-6">
                  <%= followingUser.firstname %><%= followingUser.lastname %>
                </h5>
                <p class="card-text">
                  <small class="text-body-tertiary"><%= followingUser.username%></small>
                </p>
              </div>
            </div>
            <div class="col-6">
              <div class="text-end">
                <a
                  class="btn btn-outline-dark mt-1 rounded-pill px-3 fw-bold"
                  href="#"
                  role="button"
                  >Following</a
                >
              </div>
            </div>
          </div>
        </div>
        <% } %>
        <!-- tarjeta FOLLOWERS -->
      </div>
    </div>
  </body>
</html>
